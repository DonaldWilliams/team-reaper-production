.container
  .fb-profile
    = image_tag 'background.jpg', align: 'left', alt: 'Profile image background', class: 'fb-image-lg'
    = image_tag @user.profile.avatar, align: 'left', alt: 'Profile image', class: 'fb-image-profile thumbnail'
    .fb-profile-text
      %h1= @user.full_name
      - unless @user.profile.nil?
        %p
          %b Pet:
          = @user.profile.pet
        %p
          %b Pet type:
          = @user.profile.pet_type
        %p
          %b Quiet:
          = @user.profile.quiet
        %p
          %b Clean:
          = @user.profile.clean
        %p
          %b Messy:
          = @user.profile.messy
        %p
          %b Kind of clean:
          = @user.profile.kind_of_clean
        %p
          %b Party:
          = @user.profile.party
        %p
          %b Drink:
          = @user.profile.drink
        %p
          %b Smoke:
          = @user.profile.smoke
        %p
          %b Study:
          = @user.profile.study
        %p
          %b Major:
          = @user.profile.major

      = link_to 'Edit', edit_user_path(@user), class: 'btn btn-lg btn-warning'
      = link_to 'Back', :back, class: 'btn btn-lg btn-danger'
%br
